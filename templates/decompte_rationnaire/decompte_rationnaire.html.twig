            <a class="promo" href="{{ path('ajoutDate_dateRepas', {'promo': promotion.id}) }}">{{ promotion.nomPromotion }}</a>
        </div>
    {% else %}
        <div id="aucunePromo">
            <p>Aucune Promotion</p>
